{
    "compilerOptions": {
        "rootDir": ".",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "paths": {
            "seamless-*": [
                "./*/src"
            ],
        },
    },
    "include": [
        "./packages/*/src"
    ],
    "references": [
        {
            "path": "./core"
        },
        {
            "path": "./react"
        }
    ]
}