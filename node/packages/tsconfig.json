{
  "files": [],
  "references": [
    {
      "path": "./core/tsconfig.json",
    },
    {
      "path": "./react/tsconfig.json",
    }
  ],
  "compilerOptions": {
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "composite": true,
    "jsx": "react-jsx",
    "paths": {
      "py-jsx": [
        "./core/src"
      ],
      "py-jsx/*": [
        "./core/src/*"
      ]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}